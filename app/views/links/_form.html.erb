<div class="form_field">
  <% @link.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
  <% end %>
  <%= form_for @link do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :url %>
    <%= f.text_field :url %>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>