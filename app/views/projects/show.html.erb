<div class="projects">
<div class="project">
  <h1><%= @project.name %></h1>
  <p><%= @project.summary %></p>
  <div class="middle_link"><p><%= link_to"View the CODE on Github", (@project.github) %></p></div>
  <div class="middle_link"><p><a href=<%= @project.status %>>Visit the project on Heroku</a></p></div>
  <img src=<%= @project.photo %>>
</div>
</div>
<% if current_user %>
<div class="bottom_link"><%= link_to "Edit", edit_project_path %></div>
<div class="bottom_link"><%= link_to "Omit", projects_path, action: "destroy", id: @project.id %></div>
<% end %>