<h1>Edit Project</h1>

<% @project.errors.full_messages.each do |msg| %>
  <p><%= msg %></p>
<% end %>

<%= form_for @project do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :summary %>
  <%= f.text_field :summary %>

  <%= f.label :status %>
  <%= f.text_field :status%>
  
  <%= f.label :github %>
  <%= f.text_field :github %>
  
  <%= f.label :lesson %>
  <%= f.text_field :lesson %>

  <%= f.submit %>
<% end %>
<%= link_to("home", root_path) %>