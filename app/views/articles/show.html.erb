<h1><%= @article.title %></h1>
<div class="article">
  <p><%=@excerpt %></p>
  <p><%= @article.draft %></p>
  <p><%= @length %></p>
</div>

<%= link_to "Edit Article", edit_article_path(@article.id) %>

  <%= form_for @like do |f| %>
    <%= f.check_box_tag(:like) %>
    <%= f.label_tag(:like, "LIKE THIS ARTICLE!") %>
    <%=  f.submit %>
    <% end %>
  
<p><%= @likes.length %> people like this!</p>