<div class="form_field">
  <%= form_for @article do |f| %>
    <%= f.label :title %>
    <p><%= f.text_field :title %></p>
    <%= f.label :body %>
    <p><%= f.text_field :body%></p>
    <%= f.label :draft %>
    <%= f.check_box :draft %>
  <div class="action">
   <p><%= f.submit %></p>
  </div>
  <% end %>
</div>