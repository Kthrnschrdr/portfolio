<div class="form_field">
  <h1>Sign Up</h1>
  <%= form_for @user, :url => create_user_path do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <div class="action">
      <%= f.submit %>
    </div>
  <% end %>
</div>

<div class="bottom_link"><%= link_to "Home", root_path %></div>